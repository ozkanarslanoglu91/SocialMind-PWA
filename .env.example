# ============================================
# SocialMind - Environment Variables
# Multi-Platform Social Media Management (.NET/Blazor)
# ============================================

# -------------------- SQL Server Configuration --------------------
# SQL Server Admin Password (MUST be complex, 8+ chars with uppercase, lowercase, number, symbol)
SA_PASSWORD=YourStrong@SecurePassw0rd!ChangeMe

# SQL Server Edition (Developer, Express, Enterprise)
MSSQL_PID=Developer

# Accept SQL Server License Agreement (Y/N)
ACCEPT_EULA=Y

# SQL Server Hostname/Port
MSSQL_SERVER=sqlserver
MSSQL_PORT=1433
MSSQL_DATABASE=socialmind

# -------------------- .NET Configuration --------------------
# Application Environment
ASPNETCORE_ENVIRONMENT=Development

# Application URLs
ASPNETCORE_URLS=http://+:80;https://+:443

# Application Port
ASPNETCORE_HTTP_PORT=5000
ASPNETCORE_HTTPS_PORT=5001

# -------------------- Authentication & API Keys --------------------
# GitHub Personal Access Token
GITHUB_TOKEN=ghp_your-github-pat-token-here

# OAuth Credentials for Social Platforms

# Twitter/X API
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Facebook Graph API
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# Instagram Graph API
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id_here
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here

# TikTok API
TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here

# -------------------- OpenAI Configuration --------------------
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# -------------------- Email Configuration --------------------
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

FROM_ADDRESS=noreply@socialmind.local
FROM_DISPLAY_NAME=SocialMind

# -------------------- Redis Configuration (Optional) --------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# -------------------- Logging --------------------
LOG_LEVEL=Information

# -------------------- Security --------------------
# JWT Secret Key (change in production)
JWT_SECRET_KEY=your-very-long-secure-jwt-secret-key-change-in-production-min-32-chars

# -------------------- Analytics --------------------
# Enable usage tracking
ENABLE_ANALYTICS=false

# Sentry DSN (optional error tracking)
SENTRY_DSN=
