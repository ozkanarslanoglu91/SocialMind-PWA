<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialMind.Views.SocialDashboardPage"
             Title="Platforms"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20"
                Spacing="15">

            <Label Text="ðŸŒ Social Platforms"
                    FontSize="24"
                    FontAttributes="Bold"
                    TextColor="#2563eb"/>

            <!-- Connected Accounts -->
            <Label Text="Connected Accounts"
                    FontSize="14"
                    FontAttributes="Bold"
                    TextColor="#2563eb"/>
            <CollectionView ItemsSource="{Binding SocialAccounts}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="15"
                                CornerRadius="10"
                                HasShadow="True"
                                Margin="0,5"
                                BackgroundColor="#fff">
                            <Grid ColumnDefinitions="*,Auto"
                                    RowDefinitions="Auto,Auto,Auto">
                                <Label Grid.Row="0"
                                        Grid.Column="0"
                                        Text="{Binding Platform}"
                                        FontAttributes="Bold"
                                        FontSize="14"/>
                                <Label Grid.Row="0"
                                        Grid.Column="1"
                                        Text="{Binding IsConnected, StringFormat='{0:Connected|Not Connected}'}"
                                        FontSize="12"
                                        TextColor="#666"/>

                                <Label Grid.Row="1"
                                        Grid.Column="0"
                                        Text="{Binding Username}"
                                        FontSize="12"
                                        TextColor="#666"/>
                                <Label Grid.Row="1"
                                        Grid.Column="1"
                                        Text="{Binding Followers, StringFormat='{0} followers'}"
                                        FontSize="12"
                                        FontAttributes="Bold"
                                        TextColor="#2563eb"/>

                                <Button Grid.Row="2"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Text="Disconnect"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DisconnectAccountCommand}"
                                        CommandParameter="{Binding Id}"
                                        Padding="10,5"
                                        FontSize="12"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Add New Account Button -->
            <Button Text="âž• Connect New Account"
                    Padding="20,12"
                    FontSize="14"
                    FontAttributes="Bold"/>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                    IsVisible="{Binding IsLoading}"
                    Color="#2563eb"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
