<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialMind.Views.AnalyticsPage"
             Title="Analytics"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="ðŸ“ˆ Analytics" FontSize="24" FontAttributes="Bold" TextColor="#2563eb"/>

            <!-- Analytics Data -->
            <Label Text="Performance Metrics" FontSize="14" FontAttributes="Bold" TextColor="#2563eb"/>
            <CollectionView ItemsSource="{Binding AnalyticsData}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="15" CornerRadius="10" HasShadow="True" Margin="0,5">
                            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto">
                                <Label Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding Platform}" FontAttributes="Bold" FontSize="14"/>
                                <Label Grid.Row="1" Grid.Column="0" Text="Impressions: " FontSize="11" TextColor="#666"/>
                                <Label Grid.Row="1" Grid.Column="1" Text="{Binding Impressions}" FontSize="11" FontAttributes="Bold"/>
                                <Label Grid.Row="2" Grid.Column="0" Text="Engagements: " FontSize="11" TextColor="#666"/>
                                <Label Grid.Row="2" Grid.Column="1" Text="{Binding Engagements}" FontSize="11" FontAttributes="Bold"/>
                                <Label Grid.Row="3" Grid.Column="0" Text="Engagement Rate: " FontSize="11" TextColor="#666"/>
                                <Label Grid.Row="3" Grid.Column="1" Text="{Binding EngagementRate, StringFormat='{0:F2}%'}" FontSize="11" FontAttributes="Bold" TextColor="#2563eb"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Top Posts -->
            <Label Text="Top Performing Posts" FontSize="14" FontAttributes="Bold" TextColor="#2563eb"/>
            <CollectionView ItemsSource="{Binding TopPosts}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="15" CornerRadius="10" HasShadow="True" Margin="0,5">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0" Text="{Binding Key}" FontSize="12" LineBreakMode="WordWrap"/>
                                <Label Grid.Column="1" Text="{Binding Value}" FontSize="12" FontAttributes="Bold" TextColor="#2563eb"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Trending Hashtags -->
            <Label Text="Trending Hashtags" FontSize="14" FontAttributes="Bold" TextColor="#2563eb"/>
            <CollectionView ItemsSource="{Binding TrendingHashtags}" SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="8,4" CornerRadius="6" BackgroundColor="#f0f4ff" Margin="2">
                            <Label Text="{Binding .}" FontSize="11" TextColor="#4f46e5"/>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" Color="#2563eb"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
