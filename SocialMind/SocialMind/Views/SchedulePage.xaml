<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialMind.Views.SchedulePage"
             Title="Schedule"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="ðŸ“… Schedule" FontSize="24" FontAttributes="Bold" TextColor="#2563eb"/>

            <Label Text="Upcoming Posts" FontSize="14" FontAttributes="Bold" TextColor="#2563eb"/>

            <!-- Upcoming Posts List -->
            <CollectionView ItemsSource="{Binding UpcomingPosts}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="15" CornerRadius="10" HasShadow="True" Margin="0,5">
                            <VerticalStackLayout Spacing="8">
                                <Label Text="{Binding Content}" FontSize="12" LineBreakMode="WordWrap" FontAttributes="Bold"/>
                                <Label Text="{Binding ScheduledFor, StringFormat='Scheduled: {0:g}'}" FontSize="11" TextColor="#666"/>
                                <CollectionView ItemsSource="{Binding Platforms}" HeightRequest="30">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame Padding="6,2" CornerRadius="4" BackgroundColor="#e0e7ff" Margin="2,0">
                                                <Label Text="{Binding .}" FontSize="10" TextColor="#4f46e5"/>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Empty State -->
            <Label Text="No scheduled posts" FontSize="14" TextColor="#999" HorizontalOptions="Center" IsVisible="{Binding UpcomingPosts.Count}"/>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" Color="#2563eb"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
