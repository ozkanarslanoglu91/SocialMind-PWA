<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SocialMind.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent 
            Title="Dashboard" 
            Icon="icon_about.png" 
            ContentTemplate="{DataTemplate local:DashboardPage}" 
            Route="DashboardPage" />

        <ShellContent 
            Title="Create Post" 
            Icon="icon_feed.png" 
            ContentTemplate="{DataTemplate local:CreatePostPage}" 
            Route="CreatePostPage" />

        <ShellContent 
            Title="Analytics" 
            Icon="icon_feed.png" 
            ContentTemplate="{DataTemplate local:AnalyticsPage}" 
            Route="AnalyticsPage" />

        <ShellContent 
            Title="Schedule" 
            Icon="icon_feed.png" 
            ContentTemplate="{DataTemplate local:SchedulePage}" 
            Route="SchedulePage" />

        <ShellContent 
            Title="Platforms" 
            Icon="icon_feed.png" 
            ContentTemplate="{DataTemplate local:SocialDashboardPage}" 
            Route="SocialDashboardPage" />
    </TabBar>
</Shell>
