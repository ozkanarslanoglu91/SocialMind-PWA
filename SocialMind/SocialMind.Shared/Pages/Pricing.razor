@page "/pricing"
@using SocialMind.Shared.Models
@inject NavigationManager NavigationManager

<PageTitle>Fiyatlandırma - SocialMind</PageTitle>

<div class="pricing-container">
    <div class="pricing-header">
        <h1>Doğru Planı Seçin</h1>
        <p>Tüm planlarda 14 gün ücretsiz deneme</p>
        
        <div class="billing-toggle">
            <button class="@(isYearly ? "" : "active")" @onclick="() => isYearly = false">
                Aylık
            </button>
            <button class="@(isYearly ? "active" : "")" @onclick="() => isYearly = true">
                Yıllık <span class="badge">%16 tasarruf</span>
            </button>
        </div>
    </div>

    <div class="pricing-cards">
        @foreach (var plan in DefaultSubscriptionPlans.All.OrderBy(p => p.SortOrder))
        {
            <div class="pricing-card @(plan.IsPopular ? "popular" : "")">
                @if (plan.IsPopular)
                {
                    <div class="popular-badge">
                        ⭐ En Popüler
                    </div>
                }

                <div class="plan-name">@plan.Name</div>
                <div class="plan-description">@plan.Description</div>
                
                <div class="plan-price">
                    @if (isYearly)
                    {
                        <span class="price">$@((plan.YearlyPrice / 12).ToString("F2"))</span>
                        <span class="period">/ay</span>
                        <div class="billed-yearly">Yıllık $@plan.YearlyPrice ödenir</div>
                    }
                    else
                    {
                        <span class="price">$@plan.MonthlyPrice.ToString("F2")</span>
                        <span class="period">/ay</span>
                    }
                </div>

                <button class="btn @(plan.IsPopular ? "btn-primary" : "btn-secondary")"
                        @onclick="() => SelectPlan(plan.Id, isYearly)">
                    @if (plan.Id == "free")
                    {
                        <span>Ücretsiz Başla</span>
                    }
                    else
                    {
                        <span>14 Gün Ücretsiz Dene</span>
                    }
                </button>

                <div class="plan-features">
                    <h4>Bu plana dahil:</h4>
                    <ul>
                        <li>
                            <svg class="icon" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd"
                                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                      clip-rule="evenodd" />
                            </svg>
                            <span>@(plan.MaxPosts == -1 ? "Sınırsız" : plan.MaxPosts) gönderi/ay</span>
                        </li>
                        <li>
                            <svg class="icon" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd"
                                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                      clip-rule="evenodd" />
                            </svg>
                            <span>@(plan.MaxAIGenerations == -1 ? "Sınırsız" : plan.MaxAIGenerations) AI içerik/ay</span>
                        </li>
                        <li>
                            <svg class="icon" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd"
                                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                      clip-rule="evenodd" />
                            </svg>
                            <span>@plan.MaxConnectedAccounts bağlı hesap</span>
                        </li>
                        <li>
                            <svg class="icon" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd"
                                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                      clip-rule="evenodd" />
                            </svg>
                            <span>@(plan.MaxScheduledPosts == -1 ? "Sınırsız" : plan.MaxScheduledPosts) zamanlanmış
                                gönderi</span>
                            </li>
                            @if (plan.HasAdvancedAnalytics)
                            {
                                <li>
                                    <svg class="icon" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd"
                                              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                              clip-rule="evenodd" />
                                    </svg>
                                    <span>Gelişmiş analitik</span>
                                </li>
                            }
                            @if (plan.HasTeamCollaboration)
                            {
                                <li>
                                    <svg class="icon" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd"
                                              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                              clip-rule="evenodd" />
                                    </svg>
                                    <span>Takım işbirliği</span>
                                </li>
                            }
                            @if (plan.HasPrioritySupport)
                            {
                                <li>
                                    <svg class="icon" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd"
                                              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                              clip-rule="evenodd" />
                                    </svg>
                                    <span>Öncelikli destek</span>
                                </li>
                            }
                            @if (plan.HasCustomBranding)
                            {
                                <li>
                                    <svg class="icon" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd"
                                              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                              clip-rule="evenodd" />
                                    </svg>
                                    <span>Özel branding</span>
                                </li>
                            }
                            @if (plan.HasAPIAccess)
                            {
                                <li>
                                    <svg class="icon" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd"
                                              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                              clip-rule="evenodd" />
                                    </svg>
                                    <span>API erişimi</span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
        </div>

        <div class="faq-section">
            <h2>Sık Sorulan Sorular</h2>
            <div class="faq-grid">
                <div class="faq-item">
                    <h3>Ücretsiz deneme nasıl çalışır?</h3>
                    <p>Tüm ücretli planlar için 14 gün ücretsiz deneme sunuyoruz. Kredi kartı bilgilerinizi girmeniz gerekir
                        ancak deneme süresi bitene kadar ücret alınmaz.</p>
                    </div>
                    <div class="faq-item">
                        <h3>Planımı değiştirebilir miyim?</h3>
                        <p>Evet, istediğiniz zaman planınızı yükseltebilir veya düşürebilirsiniz. Değişiklikler bir sonraki
                            fatura döneminde geçerli olur.</p>
                        </div>
                        <div class="faq-item">
                            <h3>İptal politikanız nedir?</h3>
                            <p>İstediğiniz zaman iptal edebilirsiniz. İptal ettiğinizde, aboneliğiniz mevcut fatura döneminin sonuna
                                kadar aktif kalır.</p>
                            </div>
                            <div class="faq-item">
                                <h3>Hangi ödeme yöntemlerini kabul ediyorsunuz?</h3>
                                <p>Visa, Mastercard, American Express ve diğer tüm büyük kredi kartlarını kabul ediyoruz. Stripe
                                    üzerinden güvenli ödeme işlemi yapıyoruz.</p>
                                </div>
                            </div>
                        </div>
                    </div>

@code {
    private bool isYearly = false;

    private void SelectPlan(string planId, bool yearly)
    {
        NavigationManager.NavigateTo($"/checkout?plan={planId}&billing={(yearly ? "yearly" : "monthly")}");
    }
}

<style>
    .pricing-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 4rem 2rem;
    }

    .pricing-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .pricing-header h1 {
        font-size: 3rem;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 1rem;
    }

    .pricing-header p {
        font-size: 1.25rem;
        color: #718096;
        margin-bottom: 2rem;
    }

    .billing-toggle {
        display: inline-flex;
        background: #f7fafc;
        border-radius: 12px;
        padding: 0.5rem;
        gap: 0.5rem;
    }

    .billing-toggle button {
        padding: 0.75rem 1.5rem;
        border: none;
        background: transparent;
        color: #4a5568;
        font-weight: 500;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .billing-toggle button.active {
        background: white;
        color: #667eea;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .badge {
        background: #48bb78;
        color: white;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.75rem;
    }

    .pricing-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2rem;
        margin-bottom: 6rem;
    }

    .pricing-card {
        background: white;
        border: 2px solid #e2e8f0;
        border-radius: 16px;
        padding: 2.5rem;
        position: relative;
        transition: all 0.3s;
    }

    .pricing-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }

    .pricing-card.popular {
        border-color: #667eea;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.2);
    }

    .popular-badge {
        position: absolute;
        top: -1rem;
        left: 50%;
        transform: translateX(-50%);
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 0.5rem 1.5rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .plan-name {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 0.5rem;
    }

    .plan-description {
        color: #718096;
        margin-bottom: 2rem;
    }

    .plan-price {
        margin-bottom: 2rem;
    }

    .price {
        font-size: 3rem;
        font-weight: 700;
        color: #1a202c;
    }

    .period {
        font-size: 1.25rem;
        color: #718096;
    }

    .billed-yearly {
        color: #718096;
        font-size: 0.875rem;
        margin-top: 0.5rem;
    }

    .btn {
        width: 100%;
        padding: 1rem;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.2s;
        margin-bottom: 2rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
    }

    .btn-secondary {
        background: #f7fafc;
        color: #4a5568;
        border: 2px solid #e2e8f0;
    }

    .btn-secondary:hover {
        background: #edf2f7;
        border-color: #cbd5e0;
    }

    .plan-features h4 {
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 1rem;
    }

    .plan-features ul {
        list-style: none;
        padding: 0;
    }

    .plan-features li {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
        color: #4a5568;
    }

    .icon {
        width: 20px;
        height: 20px;
        color: #48bb78;
        flex-shrink: 0;
        margin-top: 0.125rem;
    }

    .faq-section {
        max-width: 900px;
        margin: 0 auto;
    }

    .faq-section h2 {
        font-size: 2.5rem;
        font-weight: 700;
        text-align: center;
        color: #1a202c;
        margin-bottom: 3rem;
    }

    .faq-grid {
        display: grid;
        gap: 2rem;
    }

    .faq-item {
        background: #f7fafc;
        padding: 2rem;
        border-radius: 12px;
    }

    .faq-item h3 {
        font-size: 1.25rem;
        font-weight: 600;
        color: #1a202c;
        margin-bottom: 0.75rem;
    }

    .faq-item p {
        color: #4a5568;
        line-height: 1.6;
    }

    @@media (max-width: 768px) {
        .pricing-header h1 {
            font-size: 2rem;
        }

        .pricing-cards {
            grid-template-columns: 1fr;
        }

        .price {
            font-size: 2.5rem;
        }
    }
</style>
