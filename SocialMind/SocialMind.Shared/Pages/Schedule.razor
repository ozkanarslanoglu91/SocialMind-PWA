@code {
    private int selectedMonth = DateTime.Now.Month;
    private int selectedYear = DateTime.Now.Year;
    private List<PostCalendarItem> upcomingPosts = new();
    private List<SmartScheduleSuggestion> smartSuggestions = new();
    private PostCalendar calendar = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadScheduleData();
    }

    private async Task LoadScheduleData()
    {
        upcomingPosts = await ScheduleService.GetUpcomingPostsAsync(7);
        smartSuggestions = await ScheduleService.GetOptimalScheduleSuggestionsAsync("sample-post-id");
        calendar = await ScheduleService.GetCalendarForMonthAsync(selectedYear, selectedMonth);
    }

    private string GetMonthName(int month)
    {
        return new DateTime(2000, month, 1).ToString("MMMM");
    }

    private string GetPlatformColor(SocialPlatform platform)
    {
        var config = PlatformRegistry.GetPlatform(platform);
        return config?.Color ?? "#6366f1";
    }

    private int GetDayNumber(int week, int dayOfWeek)
    {
        var firstDay = new DateTime(selectedYear, selectedMonth, 1);
        var firstDayOfWeek = (int)firstDay.DayOfWeek;
        var dayNumber = week * 7 + dayOfWeek - firstDayOfWeek + 2;
        
        if (dayNumber < 1 || dayNumber > DateTime.DaysInMonth(selectedYear, selectedMonth))
            return 0;
        
        return dayNumber;
    }

    private List<PostCalendarItem> GetPostsForDay(int day)
    {
        if (day == 0) return new List<PostCalendarItem>();
        
        var date = new DateTime(selectedYear, selectedMonth, day);
        return calendar.Posts.Where(p => p.ScheduledTime.Date == date.Date).ToList();
    }

    private bool IsCurrentMonth(int day)
    {
        return day > 0;
    }
}
