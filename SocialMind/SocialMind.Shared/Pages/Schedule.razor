@page "/schedule"
@using SocialMind.Shared.Models
@using SocialMind.Shared.Services
@inject IScheduleService ScheduleService
@inject IPostService PostService

<PageTitle>Zamanlama - SocialMind</PageTitle>

<div class="schedule-container">
    <div class="header">
        <h1>üìÖ G√∂nderi Takvimi</h1>
        <div class="header-actions">
            <select @bind="selectedMonth" class="month-selector">
                @for (int i = 1; i <= 12; i++)
                {
                    <option value="@i">@GetMonthName(i)</option>
                }
            </select>
            <select @bind="selectedYear" class="year-selector">
                @for (int year = DateTime.Now.Year - 1; year <= DateTime.Now.Year + 2; year++)
                {
                    <option value="@year">@year</option>
                }
            </select>
        </div>
    </div>

    <!-- Yakla≈üan G√∂nderiler -->
    <div class="section">
        <h2>‚è∞ Yakla≈üan G√∂nderiler (7 G√ºn)</h2>
        <div class="upcoming-posts">
            @if (upcomingPosts.Any())
            {
                @foreach (var post in upcomingPosts)
                {
                    <div class="upcoming-post-card">
                        <div class="post-time">
                            <div class="time-icon">üïê</div>
                            <div class="time-info">
                                <div class="date">@post.ScheduledTime.ToString("dd MMMM yyyy")</div>
                                <div class="hour">@post.ScheduledTime.ToString("HH:mm")</div>
                            </div>
                        </div>
                        <div class="post-details">
                            <h4>@post.Title</h4>
                            <div class="post-platform">
                                <span class="platform-badge" style="background: @GetPlatformColor(post.Platform)">
                                    @post.Platform
                                </span>
                            </div>
                        </div>
                        <div class="post-actions">
                            <button class="btn-icon" title="D√ºzenle">‚úèÔ∏è</button>
                            <button class="btn-icon" title="Sil">üóëÔ∏è</button>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="empty-state">
                    <p>üì≠ Yakla≈üan planlanmƒ±≈ü g√∂nderi yok</p>
                </div>
            }
        </div>
    </div>

    <!-- Akƒ±llƒ± Zamanlama √ñnerileri -->
    <div class="section">
        <h2>ü§ñ Akƒ±llƒ± Zamanlama √ñnerileri</h2>
        <p class="section-description">AI destekli optimal payla≈üƒ±m zamanlarƒ±</p>
        <div class="suggestions-grid">
            @foreach (var suggestion in smartSuggestions)
            {
                <div class="suggestion-card">
                    <div class="suggestion-platform">
                        <div class="platform-icon" style="background: @GetPlatformColor(suggestion.Platform)">
                            @suggestion.Platform.ToString().Substring(0, 1)
                        </div>
                        <h4>@suggestion.Platform</h4>
                    </div>
                    <div class="suggestion-time">
                        <div class="suggested-datetime">
                            üìÖ @suggestion.SuggestedTime.ToString("dd MMM, HH:mm")
                        </div>
                        <div class="confidence">
                            <div class="confidence-bar">
                                <div class="confidence-fill" style="width: @(suggestion.ConfidenceScore * 100)%"></div>
                            </div>
                            <span>%@((suggestion.ConfidenceScore * 100).ToString("F0")) g√ºven</span>
                        </div>
                    </div>
                    <div class="suggestion-reason">
                        üí° @suggestion.Reason
                    </div>
                    <div class="suggestion-prediction">
                        Tahmini Etkile≈üim: <strong>@suggestion.PredictedEngagement</strong>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Takvim G√∂r√ºn√ºm√º -->
    <div class="section">
        <h2>üìÜ Aylƒ±k Takvim</h2>
        <div class="calendar">
            <div class="calendar-header">
                @foreach (var day in new[] { "Pzt", "Sal", "√áar", "Per", "Cum", "Cmt", "Paz" })
                {
                    <div class="calendar-day-name">@day</div>
                }
            </div>
            <div class="calendar-body">
                @for (int week = 0; week < 6; week++)
                {
                    @for (int dayOfWeek = 0; dayOfWeek < 7; dayOfWeek++)
                    {
                        var dayNumber = GetDayNumber(week, dayOfWeek);
                        var postsForDay = GetPostsForDay(dayNumber);
                        var isCurrentMonth = IsCurrentMonth(dayNumber);
                        
                        <div class="calendar-day @(isCurrentMonth ? "" : "other-month")">
                            @if (dayNumber > 0)
                            {
                                <div class="day-number">@dayNumber</div>
                                @if (postsForDay.Any())
                                {
                                    <div class="day-posts">
                                        @foreach (var post in postsForDay.Take(3))
                                        {
                                            <div class="day-post" style="background: @GetPlatformColor(post.Platform)"
                                                 title="@post.Title - @post.ScheduledTime.ToString("HH:mm")">
                                                @post.Platform.ToString().Substring(0, 1)
                                            </div>
                                        }
                                        @if (postsForDay.Count > 3)
                                        {
                                            <div class="day-post-more">+@(postsForDay.Count - 3)</div>
                                        }
                                    </div>
                                }
                            }
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

