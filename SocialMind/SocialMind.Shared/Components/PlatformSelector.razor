@using SocialMind.Shared.Models
@inject IPlatformService PlatformService

<div class="platform-selector">
    <h3>Platform Seç</h3>
    <div class="platforms-grid">
        @foreach (var platform in Enum.GetValues<SocialPlatform>())
        {
            var config = PlatformRegistry.GetPlatform(platform);
            var isSelected = SelectedPlatforms.Contains(platform);
            
            <div class="platform-card @(isSelected ? "selected" : "")" 
                 @onclick="() => TogglePlatform(platform)"
                 style="cursor: pointer;">
                <div class="platform-icon" style="background-color: @config?.Color">
                    <span style="color: white; font-weight: bold;">
                        @platform.ToString().Substring(0, 1)
                    </span>
                </div>
                <div class="platform-info">
                    <h4>@config?.Name</h4>
                    @if (isSelected)
                    {
                        <span class="check-icon">✓</span>
                    }
                </div>
            </div>
        }
    </div>
</div>

<style>
    .platform-selector {
        margin: 1rem 0;
    }
    
    .platforms-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 1rem;
        margin-top: 1rem;
    }
    
    .platform-card {
        border: 2px solid #e5e7eb;
        border-radius: 0.5rem;
        padding: 1rem;
        text-align: center;
        transition: all 0.2s;
    }
    
    .platform-card:hover {
        border-color: #6366f1;
        box-shadow: 0 2px 8px rgba(99, 102, 241, 0.2);
    }
    
    .platform-card.selected {
        border-color: #6366f1;
        background-color: #f0f1ff;
    }
    
    .platform-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 0.5rem;
        font-size: 1.5rem;
    }
    
    .platform-info h4 {
        margin: 0;
        font-size: 0.9rem;
    }
    
    .check-icon {
        color: #6366f1;
        font-size: 1.2rem;
        font-weight: bold;
    }
</style>

@code {
    [Parameter]
    public List<SocialPlatform> SelectedPlatforms { get; set; } = new();
    
    [Parameter]
    public EventCallback<List<SocialPlatform>> SelectedPlatformsChanged { get; set; }
    
    private void TogglePlatform(SocialPlatform platform)
    {
        if (SelectedPlatforms.Contains(platform))
        {
            SelectedPlatforms.Remove(platform);
        }
        else
        {
            SelectedPlatforms.Add(platform);
        }
        
        SelectedPlatformsChanged.InvokeAsync(SelectedPlatforms);
    }
}
