@code {
    private bool isLoading = true;
    private AdminStats stats = new();
    private List<ApplicationUser> users = new();
    private List<PaymentTransaction> recentTransactions = new();
    private string searchQuery = string.Empty;
    private int pageSize = 10;

    private IEnumerable<ApplicationUser> FilteredUsers =>
        string.IsNullOrWhiteSpace(searchQuery)
            ? users
            : users.Where(u =>
                u.Email?.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) == true ||
                u.FirstName?.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) == true ||
                u.LastName?.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) == true);

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await LoadDashboardData();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadDashboardData()
    {
        // Load stats
        stats.TotalUsers = await DbContext.Users.CountAsync();
        stats.ActiveSubscriptions = await DbContext.UserSubscriptions
            .CountAsync(s => s.Status == SubscriptionStatus.Active);
        
        var currentMonth = DateTime.UtcNow.Month;
        var currentYear = DateTime.UtcNow.Year;
        
        stats.NewUsersThisMonth = await DbContext.Users
            .CountAsync(u => u.CreatedAt.Month == currentMonth && u.CreatedAt.Year == currentYear);

        // Calculate monthly revenue
        stats.MonthlyRevenue = await DbContext.PaymentTransactions
            .Where(t => t.CreatedAt.Month == currentMonth &&
                       t.CreatedAt.Year == currentYear &&
                       t.Status == PaymentStatus.Succeeded)
            .SumAsync(t => t.Amount);

        // Plan distribution
        var subscriptions = await DbContext.UserSubscriptions
            .Include(s => s.Plan)
            .Where(s => s.Status == SubscriptionStatus.Active)
            .ToListAsync();

        stats.FreePlanCount = subscriptions.Count(s => s.Plan.Name == "Free");
        stats.ProPlanCount = subscriptions.Count(s => s.Plan.Name == "Pro");
        stats.BusinessPlanCount = subscriptions.Count(s => s.Plan.Name == "Business");

        // Load users with subscriptions
        users = await DbContext.Users
            .Include(u => u.Subscription)
                .ThenInclude(s => s!.Plan)
            .OrderByDescending(u => u.CreatedAt)
            .ToListAsync();

        // Load recent transactions
        recentTransactions = await DbContext.PaymentTransactions
            .Include(t => t.User)
            .OrderByDescending(t => t.CreatedAt)
            .Take(10)
            .ToListAsync();
    }

    private void LoadMoreUsers()
    {
        pageSize += 10;
    }

    private void ViewUserDetails(string userId)
    {
        NavigationManager.NavigateTo($"/admin/users/{userId}");
    }

    private void ManageSubscription(string userId)
    {
        NavigationManager.NavigateTo($"/admin/subscriptions/{userId}");
    }

    private string GetPlanBadgeClass(string planName) => planName switch
    {
        "Free" => "bg-secondary",
        "Pro" => "bg-primary",
        "Business" => "bg-success",
        _ => "bg-secondary"
    };

    private string GetStatusBadgeClass(SubscriptionStatus status) => status switch
    {
        SubscriptionStatus.Active => "bg-success",
        SubscriptionStatus.Trial => "bg-info",
        SubscriptionStatus.PastDue => "bg-warning",
        SubscriptionStatus.Cancelled => "bg-danger",
        SubscriptionStatus.Expired => "bg-secondary",
        _ => "bg-secondary"
    };

    private string GetTransactionStatusBadge(PaymentStatus status) => status switch
    {
        PaymentStatus.Succeeded => "bg-success",
        PaymentStatus.Pending => "bg-warning",
        PaymentStatus.Failed => "bg-danger",
        PaymentStatus.Processing => "bg-info",
        PaymentStatus.Refunded => "bg-warning",
        PaymentStatus.Cancelled => "bg-secondary",
        _ => "bg-secondary"
    };

    private class AdminStats
    {
        public int TotalUsers { get; set; }
        public int ActiveSubscriptions { get; set; }
        public decimal MonthlyRevenue { get; set; }
        public int NewUsersThisMonth { get; set; }
        public int FreePlanCount { get; set; }
        public int ProPlanCount { get; set; }
        public int BusinessPlanCount { get; set; }
    }
}
